" Always keep 7 lines above and below the cursor
set so=7

" Turn on the Wild menu
set wildmenu

" Ignore compiled files
set wildignore=*~,*.pyc

" Always show current position
set ruler

" Show line numbers
set number
highlight LineNr ctermfg=grey

" Height of the command bar
set cmdheight=2

" Ignore case when searching
set ignorecase

" When searching try to be smart with cases
set smartcase

" Highlight search results
set hlsearch

" Show matching brackets when text indicator is over them
set showmatch

" How many tenths of a second to blink when matching brackets
set mat=2

" Add a bit of extra margin to the left
set foldcolumn=1

" Enable syntax highlighting
syntax enable

" Use spaces instead of tabs
set expandtab

" Be smart with tab
set smarttab

" 1 tab == 4 spaces
set shiftwidth=4
set tabstop=4

" Linebreak on 500 characters
set lbr
set tw=500

set ai "Auto indent
set si "Smart indent
set wrap "Wrap lines

" Disable error flash
set t_vb=

